<body>

    <!-- LOGIN PAGE -->
    <div id="loginPage">
        <h2>Login to TrendRadar</h2>
        <input type="text" id="usernameInput" placeholder="Enter your username">
        <button onclick="login()">Login</button>
    </div>

    <!-- DASHBOARD -->
    <div id="dashboard" class="hidden">
        <header>
            <h1 onclick="showSection('videosSection')">TrendRadar</h1>
            <nav>
                <a onclick="showSection('videosSection')">Videos</a>
                <a onclick="showSection('addVideoSection')">Add Video</a>
                <a onclick="showSection('profileSection')">Profile</a>
                <a onclick="showSection('trendingSection')">Trending</a>
                <button onclick="logout()">Logout</button>
                <button id="modeToggle">Light Mode</button>
            </nav>
        </header>

        <div class="container">

            <!-- Video Gallery -->
            <section id="videosSection">
                <h2>Video Gallery</h2>
                <input type="text" id="searchBar" placeholder="Search videos..." oninput="filterVideos()">
                <div id="videoGallery" class="mt-20"></div>
            </section>

            <!-- Add Video -->
            <section id="addVideoSection" class="hidden">
                <h2>Add a New Video</h2>
                <input type="text" id="videoTitle" placeholder="Video Title">
                <input type="text" id="videoURL" placeholder="YouTube Embed URL">
                <button onclick="addVideo()">Add Video</button>
            </section>

            <!-- Profile -->
            <section id="profileSection" class="hidden">
                <h2>My Profile</h2>
                <div id="profile">
                    <img id="profilePic" src="https://via.placeholder.com/150" alt="Profile Picture">
                    <input type="text" id="profilePicInput" placeholder="Profile Picture URL">
                    <textarea id="profileDesc" placeholder="Description"></textarea>
                    <input type="number" id="profileSubs" placeholder="Subscribers">
                    <button onclick="saveProfile()">Save Profile</button>
                </div>
            </section>

            <!-- Trending Section -->
            <section id="trendingSection" class="hidden">
                <h2>Trending Videos</h2>
                <div id="trendingGallery"></div>
            </section>

            <!-- Notifications -->
            <div id="notificationArea"></div>

        </div>
    </div>

    <script>
        // =======================================================
        // LOCAL STORAGE & INITIAL DATA
        // =======================================================
        const USERS_KEY = 'trendRadarUsers';
        const VIDEOS_KEY = 'trendRadarVideos';
        const CURRENT_USER_KEY = 'trendRadarCurrentUser';

        let users = JSON.parse(localStorage.getItem(USERS_KEY) || "{}");
        let videos = JSON.parse(localStorage.getItem(VIDEOS_KEY) || "[]");
        let currentUser = localStorage.getItem(CURRENT_USER_KEY) || null;

        // =======================================================
        // LOGIN / LOGOUT FUNCTIONS
        // =======================================================
        function login() {
            const username = document.getElementById('usernameInput').value.trim();
            if (username) {
                currentUser = username;
                if (!users[currentUser]) {
                    users[currentUser] = { profilePic: 'https://via.placeholder.com/150', desc: '', subs: 0 };
                }
                localStorage.setItem(CURRENT_USER_KEY, currentUser);
                localStorage.setItem(USERS_KEY, JSON.stringify(users));
                showDashboard();
            } else alert("Enter username!");
        }

        function logout() {
            localStorage.removeItem(CURRENT_USER_KEY);
            currentUser = null;
            dashboard.classList.add('hidden');
            loginPage.classList.remove('hidden');
        }

        // =======================================================
        // DASHBOARD / SECTIONS
        // =======================================================
        function showDashboard() {
            loginPage.classList.add('hidden');
            dashboard.classList.remove('hidden');
            showSection('videosSection');
            loadProfile();
            renderVideos();
            renderTrending();
        }

        function showSection(section) {
            document.getElementById('videosSection').classList.add('hidden');
            document.getElementById('addVideoSection').classList.add('hidden');
            document.getElementById('profileSection').classList.add('hidden');
            document.getElementById('trendingSection').classList.add('hidden');
            document.getElementById(section).classList.remove('hidden');
        }

        // =======================================================
        // PROFILE FUNCTIONS
        // =======================================================
        function loadProfile() {
            const profile = users[currentUser];
            document.getElementById('profilePic').src = profile.profilePic || 'https://via.placeholder.com/150';
            document.getElementById('profilePicInput').value = profile.profilePic || '';
            document.getElementById('profileDesc').value = profile.desc || '';
            document.getElementById('profileSubs').value = profile.subs || 0;
        }

        function saveProfile() {
            users[currentUser].profilePic = document.getElementById('profilePicInput').value;
            users[currentUser].desc = document.getElementById('profileDesc').value;
            users[currentUser].subs = document.getElementById('profileSubs').value;
            localStorage.setItem(USERS_KEY, JSON.stringify(users));
            loadProfile();
            showNotification("Profile updated!");
        }

        // =======================================================
        // VIDEO FUNCTIONS
        // =======================================================
        function addVideo() {
            const title = document.getElementById('videoTitle').value.trim();
            const url = document.getElementById('videoURL').value.trim();
            if (title && url) {
                videos.push({ title, url, user: currentUser, likes: 0, comments: [] });
                localStorage.setItem(VIDEOS_KEY, JSON.stringify(videos));
                document.getElementById('videoTitle').value = '';
                document.getElementById('videoURL').value = '';
                renderVideos();
                renderTrending();
                showNotification("Video added!");
                showSection('videosSection');
            } else alert("Fill both fields!");
        }

        function renderVideos() {
            const gallery = document.getElementById('videoGallery');
            gallery.innerHTML = '';
            const filter = document.getElementById('searchBar').value.toLowerCase() || '';
            videos.filter(v => v.title.toLowerCase().includes(filter)).forEach((video, index) => {
                const card = document.createElement('div');
                card.className = 'video-card';
                card.innerHTML = `
      <iframe src="${video.url}" allowfullscreen></iframe>
      <h3>${video.title}</h3>
      <p>Uploaded by: ${video.user}</p>
      <p>Likes: ${video.likes}</p>
      <button onclick="likeVideo(${index})">Like</button>
      <div>
        <input type="text" id="commentInput${index}" placeholder="Add comment">
        <button onclick="addComment(${index})">Comment</button>
      </div>
      <div id="comments${index}">
        ${video.comments.map(c => `<div class="comment">${c.user}: ${c.text}</div>`).join('')}
      </div>
    `;
                gallery.appendChild(card);
            });
        }

        function likeVideo(index) {
            videos[index].likes++;
            localStorage.setItem(VIDEOS_KEY, JSON.stringify(videos));
            users[videos[index].user].subs++;
            localStorage.setItem(USERS_KEY, JSON.stringify(users));
            renderVideos();
            renderTrending();
            showNotification(`You liked: ${videos[index].title}`);
        }

        function addComment(index) {
            const text = document.getElementById(`commentInput${index}`).value.trim();
            if (text) {
                videos[index].comments.push({ user: currentUser, text });
                localStorage.setItem(VIDEOS_KEY, JSON.stringify(videos));
                renderVideos();
                showNotification(`${currentUser} commented on: ${videos[index].title}`);
            }
        }

        // =======================================================
        // TRENDING FUNCTIONS
        // =======================================================
        function renderTrending() {
            const trending = document.getElementById('trendingGallery');
            trending.innerHTML = '';
            const topVideos = [...videos].sort((a, b) => b.likes - a.likes).slice(0, 5);
            topVideos.forEach(video => {
                const card = document.createElement('div');
                card.className = 'trending-card';
                card.innerHTML = `<h4>${video.title}</h4><p>By ${video.user}</p>
                    <p>Likes: ${video.likes}</p>
    `;
    trending.appendChild(card);
  });
}

// =======================================================
// SEARCH / FILTER
// =======================================================
function filterVideos(){
  renderVideos();
}

// =======================================================
// NOTIFICATIONS
// =======================================================
function showNotification(msg){
  const area = document.getElementById('notificationArea');
  const note = document.createElement('div');
  note.className = 'notification';
  note.innerText = msg;
  area.appendChild(note);
  setTimeout(()=>{ area.removeChild(note); }, 3000);
}

// =======================================================
// LIGHT / DARK MODE TOGGLE
// =======================================================
const modeBtn = document.getElementById('modeToggle');
modeBtn.addEventListener('click', ()=>{
  if(document.body.style.background === 'white'){
    document.body.style.background='#121212';
    document.body.style.color='#fff';
    modeBtn.innerText='Light Mode';
  } else {
    document.body.style.background='white';
    document.body.style.color='black';
    modeBtn.innerText='Dark Mode';
  }
});

// =======================================================
// AUTO LOGIN IF USER EXISTS
// =======================================================
if(currentUser) showDashboard();
                </script>
</body>

</html>    
